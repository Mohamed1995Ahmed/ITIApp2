@using ViewModel;
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">Login</h2>
    <hr />

    <div class="row justify-content-center">
       <form asp-action="login" asp-controller="account"  method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-floating mb-3">
                <input asp-for="loginmethod" class="form-control" placeholder="loginmethod" />
                <label asp-for="loginmethod" class="text-muted">loginmethod</label>
                <span asp-validation-for="loginmethod" class="text-danger"></span>
            </div>

       @*      <div class="form-floating mb-3">
                <input asp-for="" type="email" class="form-control" placeholder="Email" />
                <label asp-for="Email" class="text-muted">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div> *@

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password" class="text-muted">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           
                <input  type="hidden" asp-for="returnurl"/>
                
            
            <div class="form-floating mb-3">
                <input asp-for="RememberMe"  class="form-check" placeholder="RememberMe" />
                <label asp-for="RememberMe" class="text-muted">RememberMe</label><br />
                
            </div>

      
                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            

            <!-- Forgot Password Link -->
            @* <div class="mt-3 text-center">
                @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account")
            </div> *@

            <!-- Sign Up Link -->
            <div class="mt-3 text-center">
                <p>Don't have an account? @Html.ActionLink("Sign Up", "Register", "Account")</p>
            </div>
        </form>
        </div>

    </div>
    </div>
    <style>
        /* Main container for the login form */
        .container {
            max-width: 600px; /* Maximum width of the form */
            background-color: #f7f7f7; /* Light background color */
            padding: 40px; /* Padding around the content */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
            margin-top: 80px; /* Space above the container */
        }

        /* Heading style */
        h2 {
            font-size: 28px; /* Font size for the heading */
            font-weight: 600; /* Bold font weight */
            margin-bottom: 20px; /* Space below the heading */
            color: #333; /* Dark color for the heading */
        }

        /* Label style */
        .form-group label {
            font-weight: 600; /* Bold font for labels */
            color: #333; /* Dark color for labels */
        }

        /* Input fields styling */
        .form-control {
            border-radius: 5px; /* Rounded corners for input fields */
            font-size: 16px; /* Font size for input text */
            padding: 10px; /* Padding inside input fields */
            border: 1px solid #ced4da; /* Light gray border */
        }

            /* Input focus styling */
            .form-control:focus {
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.25); /* Blue glow on focus */
                border-color: #007bff; /* Blue border on focus */
            }

        /* Checkbox label styling */
        .form-check-label {
            font-size: 14px; /* Font size for checkbox labels */
            color: #333; /* Dark color for checkbox labels */
        }

        /* Button styling */
        .btn-primary {
            background-color: #007bff; /* Blue background color */
            border-color: #007bff; /* Blue border */
            font-size: 16px; /* Font size for buttons */
            font-weight: 600; /* Bold font weight */
            padding: 10px; /* Padding inside buttons */
            border-radius: 5px; /* Rounded corners for buttons */
            transition: background-color 0.3s ease; /* Smooth transition on hover */
        }

            /* Button hover effect */
            .btn-primary:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        /* Link styling in text center */
        .text-center a {
            color: #007bff; /* Blue color for links */
            text-decoration: none; /* Remove underline from links */
            font-weight: 600; /* Bold font weight for links */
        }

            /* Link hover effect */
            .text-center a:hover {
                text-decoration: underline; /* Underline links on hover */
            }

        /* Error message styling */
        .text-danger {
            font-size: 14px; /* Font size for error messages */
            color: #dc3545; /* Red color for error messages */
        }

    </style>
    





