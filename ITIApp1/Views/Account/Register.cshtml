@model ViewModel.Userregister

@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<div class="container  min-vh-100 bg-light">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header bg-dark text-white text-center py-4">
                <h3 class="mb-0">Create an Account</h3>
            </div>
            <div class=" p-4 ">
                <form asp-action="Register" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Firstname" class="form-control" placeholder="First Name" />
                        <label asp-for="Firstname" class="text-muted">First Name</label>
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Lastname" class="form-control" placeholder="Last Name" />
                        <label asp-for="Lastname" class="text-muted">Last Name</label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="Username" />
                        <label asp-for="UserName" class="text-muted">Username</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                        <label asp-for="Email" class="text-muted">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <label asp-for="Password" class="text-muted">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                        <label asp-for="ConfirmPassword" class="text-muted">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-block py-2">Create Account</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3 bg-light">
                <a asp-action="Index" class="text-muted">Back to List</a>
            </div>
        </div>
    </div>
</div>
<style>
    /* General Styles */
body {
    background-color: #f8f9fa; /* Light background */
    font-family: 'Arial', sans-serif;
}

.container {
    max-width: 100%; /* Ensure the container is responsive */
    padding: 20px;
}


.card {
    border-radius: 15px;
}

.card-header {
    background-color: #343a40; /* Dark background for header */
    color: #fff; /* White text */
    text-align: center;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

.card-footer {
    background-color: #f8f9fa; /* Light footer background */
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px;
}

/* Form Floating Labels */
.form-floating {
    position: relative;
}

.form-floating input {
    border: 1px solid #ced4da; /* Soft border color */
    border-radius: 10px;
    padding: 20px;
    font-size: 16px;
}

.form-floating label {
    font-size: 14px;
    color: #6c757d; /* Muted label text */
    padding: 0 10px;
    pointer-events: none;
}

.form-floating .form-control:focus {
    border-color: #80bdff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
}

.form-floating .form-control {
    height: auto;
}

.mb-3 {
    margin-bottom: 1rem !important;
}

/* Button Styling */
.btn-block {
    border-radius: 10px;
    font-size: 18px;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.btn-block:hover {
    background-color: #218838;
}

.btn-primary {
    background-color: #007bff;
    border: none;
}

.btn-primary:hover {
    background-color: #0056b3;
}

/* Error Validation */
.text-danger {
    font-size: 0.9rem;
}

/* Adjust Card Footer Link */
.card-footer a {
    color: #6c757d; /* Muted link color */
    text-decoration: none;
    transition: color 0.2s;
}

.card-footer a:hover {
    color: #007bff;
}
/* Ensure the container takes the full height of the viewport and centers its content */
html, body {
    height: 100%;
    margin: 0;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh; /* Full viewport height */
    background-color: #f8f9fa; /* Light background for contrast */
    padding: 20px;
}

.card {
    width: 100%;
    max-width: 500px; /* Limit the width of the card */
    border-radius: 15px;
}

.card-header {
    background-color: #343a40;
    color: white;
}

.card-footer {
    background-color: #f1f1f1;
}

.form-floating {
    margin-bottom: 20px;
}

.form-control {
    border-radius: 0.5rem;
}

button {
    font-weight: bold;
}



/* Responsive Styling */


</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
