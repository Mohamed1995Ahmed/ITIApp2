<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- FontAwesome for icons -->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />

    <style>
        /* Navbar styling */
        .navbar {
            background-color: #343a40;
        }

        .navbar .navbar-brand, .navbar .nav-link {
            color: #fff;
        }
        

        .navbar .nav-link:hover {
            color: #cfd8dc;
        }

        /* Content wrapper */
        #content-wrapper {
            padding: 20px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .footer {
            background-color: #343a40;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

       
    </style>
</head>

<body>
    
    <!-- Content Wrapper -->
    <div id="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Profile", "Admin")">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Notifications", "Admin")">Notifications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("LogIN", "Account")">Logout</a>
                    </li>
                    @if (User.Identity!.Name != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Add" asp-controller="Book">add</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Delete" asp-controller="book"  class="btn btn-danger">Delete</a>

                        </li>
                        <li class="nav-item">
                            <a asp-action="login" asp-controller="account" class="btn btn-danger">login</a>

                        </li>
                    }
                    <li class="nav-item">
                        <a asp-action="logout" asp-controller="account" class="btn btn-danger">LogOut</a>

                    </li>
                    <li class="nav-item">
                        <a asp-action="register" asp-controller="account" class="btn btn-danger">Register</a>

                    </li>
                    }
                    }

                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid">
            <h1 class="mt-4">@ViewBag.Title</h1>
            <hr />
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        &copy; @DateTime.Now.Year - Admin Dashboard
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("script", required: false);
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>



</html>
