@model Book // Ensure the correct namespace is imported

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <div>
        <h5>@Model.Title</h5>
        <p><strong>ISBN:</strong> @Model.Isbn</p>
        <p><strong>Summary:</strong> @Model.Summary</p>
        <p><strong>Notes:</strong> @Model.Notes</p>
        <p><strong>Price:</strong> $@Model.Price</p>
    </div>
</div>

<form asp-action="delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>



